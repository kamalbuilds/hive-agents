# Production Environment Variables for Hive Mind

# API Configuration
NEXT_PUBLIC_API_URL=https://api.hivemind.network
NEXT_PUBLIC_WS_URL=wss://ws.hivemind.network

# Blockchain Configuration - Base Mainnet
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_COORDINATOR_ADDRESS=0x0000000000000000000000000000000000000000  # Deploy to mainnet
NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913  # Base Mainnet USDC

# Network Configuration
NEXT_PUBLIC_NETWORK=base
NEXT_PUBLIC_EXPLORER_URL=https://basescan.org

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_X402=true
NEXT_PUBLIC_ENABLE_LAYERZERO=true
NEXT_PUBLIC_ENABLE_FLARE=true
NEXT_PUBLIC_ENABLE_CDP=true

# x402 Protocol Configuration
X402_BAZAAR_API=https://api.x402.org/v1
X402_NETWORK_ID=base
X402_SERVICE_KEY=  # Add your x402 API key

# Flare Network Configuration
FLARE_RPC_URL=https://flare-api.flare.network/ext/C/rpc
FLARE_FTSO_V2_RELAY=0x13F0196C44221E6E176fCf4f3B9571472e580238  # Flare Mainnet FTSO V2
FLARE_FAST_UPDATER=0x70e8870EF234EcD665F96Da4c669dc12c1e1c116  # Flare Mainnet Fast Updater

# LayerZero Configuration
LAYERZERO_ENDPOINT_BASE=0x1a44076050125825900e736c501f859c50fE728c  # Base Mainnet
LAYERZERO_ENDPOINT_ARBITRUM=0x1a44076050125825900e736c501f859c50fE728c  # Arbitrum Mainnet
LAYERZERO_ENDPOINT_OPTIMISM=0x1a44076050125825900e736c501f859c50fE728c  # Optimism Mainnet

# CDP AgentKit Configuration
CDP_API_KEY=  # Add your CDP API key
CDP_PRIVATE_KEY=  # Add CDP wallet private key
CDP_NETWORK_ID=base-mainnet

# Security & Authentication
API_SECRET_KEY=  # Generate a secure random key
JWT_SECRET=  # Generate a secure JWT secret
ENCRYPTION_KEY=  # Generate encryption key for sensitive data

# Bridge Configuration
BRIDGE_PRIVATE_KEY=  # Bridge operator private key (keep secure!)

# Monitoring & Analytics
SENTRY_DSN=  # Add Sentry DSN for error tracking
DATADOG_API_KEY=  # Add DataDog API key for monitoring
GOOGLE_ANALYTICS_ID=  # Add GA tracking ID

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Database (if needed)
DATABASE_URL=  # PostgreSQL connection string

# Redis Cache (if needed)
REDIS_URL=  # Redis connection string

# IPFS Configuration
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=  # Add Pinata API key for IPFS
PINATA_SECRET_KEY=  # Add Pinata secret key

# WebSocket Server Configuration
WEBSOCKET_URL=wss://ws.hivemind.network
WEBSOCKET_PORT=443
WEBSOCKET_SECURE=true

# Agent Configuration
MAX_AGENTS_PER_USER=10
AGENT_IDLE_TIMEOUT=3600000  # 1 hour in milliseconds
AGENT_MAX_MEMORY=1024  # MB
AGENT_MAX_CPU=2  # Cores

# Task Configuration
MAX_TASK_DURATION=86400000  # 24 hours in milliseconds
MIN_TASK_REWARD=1  # USDC
MAX_TASK_REWARD=10000  # USDC
PLATFORM_FEE_PERCENTAGE=2.5

# Security Headers
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://hivemind.network,https://app.hivemind.network
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Deployment Configuration
VERCEL_URL=https://hivemind.network
VERCEL_ENV=production
NODE_ENV=production